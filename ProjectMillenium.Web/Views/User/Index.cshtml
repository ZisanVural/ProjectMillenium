@using ProjectMillenium.Core.Entity
@model List<ProjectMillenium.Web.Models.UserViewModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        Kullanıcı Listesi
    </title>
</head>
<body>

    <p>
        <a class="btn btn-primary" asp-action="Create">Kullanıcı Oluştur</a>
    </p>


    <table class="table .table-responsive-sm">
       <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @*// @Html.DisplayNameFor(model => model.Name)*@ Ad
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Lastname)*@ Soyad
                </th>
                <th scope="col">
                    @*// @Html.DisplayNameFor(model => model.Username)*@ Kullanıcı Adı
                </th>

                <th scope="col">
                    @*  @Html.DisplayNameFor(model => model.Email) *@ Eposta
                </th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Kullanıcıyı Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        <a class="btn btn-secondary" asp-action="AddUserRole" asp-route-id="@item.Id">Rol Ata</a>
                        <a class="btn btn-secondary" asp-action="RemoveUserRole" asp-route-id="@item.Id">Rolü Kaldır</a>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
</body>
</html>