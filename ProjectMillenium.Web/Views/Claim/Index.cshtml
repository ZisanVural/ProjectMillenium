@using ProjectMillenium.Core.Entity
@model List<ProjectMillenium.Web.Models.ClaimViewModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>
        Claimler
    </title>
</head>
<body>

    <p>
        <a class="btn btn-primary" asp-action="Create">Claim Oluştur</a>
    </p>


    <table class="table .table-responsive-sm">

        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @*// @Html.DisplayNameFor(model => model.Name)*@ Claim Adı
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Description)*@ Claim Detayı
                </th>
            
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                        @if (item != null)
                        {
                            @Html.DisplayFor(modelItem => item.Name)
                        }
                    </td>
                    <td>
                        @if (item != null)
                        {
                            @Html.DisplayFor(modelItem => item.Description)
                        }
                    </td>
                    <td>
                        @if (item != null)
                        {
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Claim Düzenle</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>